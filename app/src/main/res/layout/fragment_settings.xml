<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/contributionsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contri_textView_Str"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/signal2TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.28"
            android:drawableStart="@mipmap/contribution_icon_32"/>

        <TextView
            android:id="@+id/contributionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/contributionsView"
            app:layout_constraintStart_toEndOf="@+id/contributionsView"
            android:background="@color/contri_color"/>

        <TextView
            android:id="@+id/signal2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="@string/pause_data_textView_Str"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/contributionsView"
            app:layout_constraintTop_toBottomOf="@+id/contributionsView"
            android:drawableStart="@mipmap/pause_32"/>


        <CheckBox
            android:id="@+id/pauseContriCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/signal2TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/signal2TextView"
            android:background="@color/pause_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="@string/contri_thanks_textView_Str"
            android:background="@drawable/border"
            android:justificationMode="inter_word"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signal2TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40sp"
            android:drawableTop="@mipmap/thanks_32"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
