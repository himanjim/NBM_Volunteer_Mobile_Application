<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signal_scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments.QoSFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/signal1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/pauseTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.042" />

        <TextView
            android:id="@+id/pauseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/signal3TextView"
            app:layout_constraintStart_toStartOf="@+id/signal1TextView"
            app:layout_constraintTop_toBottomOf="@+id/signal1TextView" />


        <TextView
            android:id="@+id/signal3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/pauseTextView"
            app:layout_constraintTop_toBottomOf="@+id/pauseTextView" />

        <TextView
            android:id="@+id/signal4TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/signal3TextView"
            app:layout_constraintTop_toBottomOf="@+id/signal3TextView" />

        <TextView
            android:id="@+id/signal5TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/signal4TextView"
            app:layout_constraintTop_toBottomOf="@+id/signal4TextView" />

        <TextView
            android:id="@+id/signal6TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:text="@string/fetch_textView_Str"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout1"
            app:layout_constraintStart_toStartOf="@+id/signal5TextView"
            app:layout_constraintTop_toBottomOf="@+id/signal5TextView" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh_signals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/refresh"
            android:contentDescription="Refresh Signals"
            app:layout_constraintEnd_toEndOf="@id/signal1TextView"
            app:layout_constraintTop_toTopOf="@id/signal1TextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

